{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "simrail-scenario-editor",
        "version": "0.2.1"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "dialog": {
                "open": true
            },
            "path": {
                "all": true
            },
            "shell": {
                "all": false,
                "open": true
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.simrail-scenario-editor",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "SimRail Scenario Editor",
                "width": 1280,
                "height": 720
            }
        ]
    }
}
